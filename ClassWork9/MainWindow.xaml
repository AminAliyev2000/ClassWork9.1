<Window x:Class="ClassWork9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork9"
        mc:Ignorable="d"
        Title="MainWindow"
        
        Height="450"
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Khaki">
    <!--<Window.CommandBindings>
        <CommandBinding Command="Help" x:Name="Help" CanExecute="Help_CanExecute" Executed="Help_Executed"></CommandBinding>
    </Window.CommandBindings>-->
    <Grid>
        <StackPanel Width="400">
            <TextBox Height="50" FontSize="24 " Text="{Binding Text,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Command="{Binding MessageCommand}" FontSize="36">Display</Button>
            <Button Command="{Binding SendCommand}" FontSize="36">Send</Button>
        </StackPanel>
    </Grid>
</Window>
